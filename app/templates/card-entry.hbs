{{#if success}}
  <h3 class="spec-success-message">Success!</h3>
{{/if}}

<div>
  <h1>Enter Credit Card</h1>
  {{#cc-form card=creditCard as |form|}}

    {{#if form.isInValid}}
      <div class="validation-errors">
        <h3>Please enter:</h3>
        <ul class="validation-error-messages">
          {{! Once we have cc-form, duplicate below for expIsValid, ccvIsValid, and nameIsValid}}
          {{#unless form.numberIsValid}}
            <li>A valid credit card number</li>
          {{/unless}}
        </ul>
      </div>
    {{else}}
      Card is valid!
    {{/if}}

    {{! Bind form.type class to cc-outer div once there's a form}}
    <div class="cc-outer {{form.type}}">
      <div class="background">
        <div class="cc-inner">

          {{cc-input number=form.number type=form.type class="spec-cc-input cc-number" placeholder="4111111111111111"}}

          {{! Insert these inputs once we have a cc-form component}}
          {{input value=form.exp class="spec-cc-exp cc-exp" placeholder="EXP"}}
          {{input value=form.ccv class="spec-cc-ccv cc-ccv" placeholder="CCV"}}
          {{input value=form.name class="spec-cc-name cc-name" placeholder="YOUR NAME"}}


          <button class="spec-pay-button" disabled={{form.isInvalid}} {{action "submitCard" form}}>Pay!</button>
        </div>
      </div>
    </div>

  {{/cc-form}}
</div>
